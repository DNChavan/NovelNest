@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> Create new Category
            </a>
        </div>
    </div>

    <!-- Add a custom class to the table for styling -->
    <table class="table table-bordered table-striped custom-table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add custom CSS to reduce the table width -->
<style>
    .container{
        width: 80%; /* Adjust the width as needed (e.g., 50%, 60%, etc.) */
        margin: 0 auto; /* Center the table horizontally */
    }
</style>
